<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:id="@+id/root"
     >

    <include layout="@layout/title" />
    

    <LinearLayout android:id="@+id/lay_buy"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >
 
    <cn.com.xyc.view.LabelText
        android:id="@+id/elt_clxh"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        bgImage="@drawable/bg_select"
        label="@string/clxh"
        android:paddingLeft="10.0dip" />
    
     <TextView
        android:id="@+id/txt_uaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="收货人信息" />
    
    <cn.com.xyc.view.LabelText
        android:id="@+id/elt_uname"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        bgImage="@drawable/group_select_top_o"
        label="@string/xm"
        android:paddingLeft="10.0dip" >
    </cn.com.xyc.view.LabelText>
    
    <cn.com.xyc.view.LabelText
        android:id="@+id/elt_provice"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        bgImage="@drawable/group_select_mid_o"
        label="@string/provice"
        android:paddingLeft="10.0dip" >
    </cn.com.xyc.view.LabelText>
    
    <cn.com.xyc.view.LabelText
        android:id="@+id/elt_area"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        bgImage="@drawable/group_select_mid_o"
        label="@string/city"
        android:paddingLeft="10.0dip" >
    </cn.com.xyc.view.LabelText>
    
    <cn.com.xyc.view.LabelText
        android:id="@+id/elt_detailaddress"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        bgImage="@drawable/group_select_bottom_o"
        label="@string/detail_address"
        android:paddingLeft="10.0dip" >
    </cn.com.xyc.view.LabelText>
     
    </LinearLayout>
    
   
    
     <LinearLayout android:id="@+id/lay_fee"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_marginTop="15dip"
    android:orientation="vertical" >
     
     <TextView
        android:id="@+id/txt_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="费用信息" />
    <cn.com.xyc.view.LabelText
        android:id="@+id/elt_clxh_fee"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        bgImage="@drawable/input_bg"
        label="@string/zfy"
        android:paddingLeft="10.0dip" />
    
    </LinearLayout>
    
     <LinearLayout 
    android:orientation="horizontal" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:layout_gravity="center_horizontal"> 
   <Button
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_sure_o"
        android:textColor="#FFFFFFFF"
        android:text="确定"
        android:textSize="16dip" />
  </LinearLayout>  

</LinearLayout>