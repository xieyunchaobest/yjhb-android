<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical" >

   
    <RelativeLayout
        android:id="@+id/lay_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="100dip"
            android:layout_height="65dip"
            android:layout_margin="5dip"
           android:src="@drawable/home_btn_bg" 
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lay_img"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:gravity="left"
            android:paddingTop="15dp"
            android:textColor="#3d3d3d"
            android:textSize="16dip" 
            android:text="极品飞车" />

        <TextView
            android:id="@+id/item_xh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_model"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:text="30公里续航" 
             />
        
        <TextView
            android:id="@+id/item_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_xh"
            android:layout_below="@+id/item_model"
            android:layout_marginLeft="20dip"
            android:layout_alignTop="@+id/item_xh"
            android:text="30元/小时"  />
        <TextView
            android:id="@+id/item_id"
            android:layout_width="0dp"
            android:layout_height="0dp"    />
    </RelativeLayout>
 
</RelativeLayout>