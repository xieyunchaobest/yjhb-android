<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="title" parent="android:Theme">
        <item name="android:windowTitleSize">43.0dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/title_bg</item>
    </style>
    
     <!-- title style -->
    <style name="title_bg">
        <item name="android:background">@drawable/titlebar_bg</item>
    </style>
    
    <style name="process_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
     <!-- checkbox style -->
    <style name="checkboxc" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/common_checkbox</item>
        <item name="android:textColor">#FFA2A499</item>
    </style>
    
    
</resources>